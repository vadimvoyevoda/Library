{% extends 'dashboard_base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

<div class="row cards">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Authors</div>
            <div class="card-body">
                <div class="card-img">
                    <a href="{{ path('authors') }}">
                        <img src="{{ asset("assets/img/author.png") }}" class="card-img-top" alt="...">
                    </a>
                </div>
                <div class="card-content">            
                    <h5 class="card-title">Authors</h5>
                    <p class="card-text">For managing authors section.</p>
                    <a href="{{ path('authors') }}" class="btn btn-primary">All authors</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Books</div>
            <div class="card-body">
                <div class="card-img">
                    <a href="{{ path('books') }}">
                        <img src="{{ asset("assets/img/book.png") }}" class="card-img-top" alt="...">
                    </a>
                </div>
                <div class="card-content">
                    <h5 class="card-title">Books</h5>
                    <p class="card-text">For managing books section.</p>  
                    <a href="{{ path('books') }}" class="btn btn-primary">All books</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
