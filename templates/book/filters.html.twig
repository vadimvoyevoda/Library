<div class="filters_row">
    <form action="{{ path('filter_book') }}" id="filters_form" name="filters_form" class="form-inline">
        <div class="form-group">
            <label for="filter_title">Title</label>
            <input type="text" 
                   name="title" 
                   id="filter_title" 
                   class="form-control" 
                   placeholder="type title..."
                   value="{{ app.request.get('title') }}" >
        </div>
        <div class="form-group">
            <label for="filter_author">Author</label>
            <input type="text" 
                   name="author" 
                   id="filter_author" 
                   class="form-control" 
                   placeholder="type author..."
                   value="{{ app.request.get('author') }}" >
        </div>
        <div class="form-group">
            <label for="filter_translation">Translation</label>
            <input type="text" n
                   name="translation" 
                   id="filter_translation" 
                   class="form-control" 
                   placeholder="type translation..."
                   value="{{ app.request.get('translation') }}" >
        </div>
        <div class="form-group">
            <button class="btn btn-info">Search</button>
        </div>
    </form>
</div>