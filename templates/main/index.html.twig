{% extends 'base.html.twig' %}

{% block title %}Online Book Catalogue{% endblock %}

{% block body %}

    <h1>Online Book Catalogue</h1>

    <div class="filters_row">
        <form action="{{ path('home') }}" id="filters_form" name="filters_form" class="form-inline">
            <div class="form-group">
                <label for="filter_title">Title</label>
                <input type="text" name="title" id="filter_title" class="form-control" placeholder="type title...">
            </div>
            <div class="form-group">
                <label for="filter_author">Author</label>
                <input type="text" name="author" id="filter_author" class="form-control" placeholder="type author...">
            </div>
            <div class="form-group">
                <label for="filter_translation">Translation</label>
                <input type="text" name="translation" id="filter_translation" class="form-control" placeholder="type translation...">
            </div>
            <div class="form-group">
                <button class="btn btn-info">Search</button>
            </div>
        </form>
    </div>

    <div id="books_catalogue">
    {{ include("/book/list.html.twig") }}
    </div>

{% endblock %}
